# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017
MONGODB_DB_NAME=mathmotion

# OpenRouter API Key (https://openrouter.ai)
# Sign up and get your key from https://openrouter.ai/keys
OPENROUTER_API_KEY=your-key-here

# Manim Renderer Configuration
DOCKER_IMAGE=manimcommunity/manim:latest
RENDER_TIMEOUT_MS=120000
RENDER_MEMORY_LIMIT_MB=1024
RENDER_CPU_LIMIT=2
TEMP_DIR=/tmp/mathmotion

# Node environment
NODE_ENV=development
